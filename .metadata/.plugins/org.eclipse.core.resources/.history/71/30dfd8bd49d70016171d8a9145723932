/*
 This class extends GameObject in order to more easily create asteroids for use in our 
 asteroids game
 */
import java.util.Random;

public class Asteroid extends GameObject {

	static Random r;
	//default constructor
	public Asteroid(){
		super(new Random().nextDouble()*560+20, 620, "asteroid");
		this.setRadius(16);
		this.setTeam(2);
		this.setRadius(16);
		this.setVY(-5);
	}
	
	public void die(){
		super.die();
		new Explosion(this);
		new Explosion();
	}
}
