/*
 This class extends GameObject in order to more easily create asteroids for use in our 
 asteroids game
 */
import java.util.Random;

public class Asteroid extends GameObject {

	static Random r;
	//default constructor
	public Asteroid(){
		super(0, 580, "asteroid");
		r = new Random();
		this.setRadius(16);
		this.setTeam(2);
		this.setX(r.nextDouble()*560+20);
		this.setRadius(16);
		this.setVY(-5);
	}
	
}
